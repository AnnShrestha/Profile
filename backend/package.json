{
  "name": "annan-shrestha-portfolio-backend",
  "version": "1.0.0",
  "description": "Backend server for Annan Shrestha's GIS Portfolio with API endpoints and GIS data processing capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "echo 'No build step needed'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "pm2 start server.js --name portfolio-api"
  },
  "keywords": [
    "gis",
    "portfolio",
    "api",
    "express",
    "spatial-analysis",
    "web-gis",
    "geospatial",
    "remote-sensing"
  ],
  "author": {
    "name": "Annan Shrestha",
    "email": "annanshrestha1@gmail.com",
    "url": "https://github.com/AnnShrestha"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnnShrestha/portfolio-backend.git"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "sharp": "^0.33.0",
    "csv-parser": "^3.0.0",
    "archiver": "^6.0.1",
    "proj4": "^2.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "optionalDependencies": {
    "gdal-async": "^3.7.0",
    "turf": "^3.0.14",
    "geojson-validation": "^1.0.2",
    "spatialite": "^0.0.22",
    "pg": "^8.11.3"
  },
  "config": {
    "port": 3000,
    "mongodb_url": "mongodb://localhost:27017/portfolio",
    "redis_url": "redis://localhost:6379"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "func-names": "off"
    }
  }
}